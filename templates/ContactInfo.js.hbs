import React from 'react';
import { Box, Typography, IconButton } from '@mui/material';
import PhoneIcon from '@mui/icons-material/Phone';
import EmailIcon from '@mui/icons-material/Email';
import LocationOnIcon from '@mui/icons-material/LocationOn';

const styles = {
  container: {
    display: 'flex',
    flexDirection: 'column',
    gap: '16px',
  },
  contactItem: {
    display: 'flex',
    alignItems: 'center',
    gap: '8px',
  }
};

const ContactInfo = ({ phone, email, address }) => {
  const contacts = [
    { icon: <PhoneIcon />, value: phone },
    { icon: <EmailIcon />, value: email },
    { icon: <LocationOnIcon />, value: address },
  ];

  return (
    <Box sx={styles.container}>
      {contacts.map((contact, index) => (
        <Box key={index} sx={styles.contactItem}>
          <IconButton color="primary" size="large">
            {contact.icon}
          </IconButton>
          <Typography variant="body1">{contact.value}</Typography>
        </Box>
      ))}
    </Box>
  );
};

export default ContactInfo;