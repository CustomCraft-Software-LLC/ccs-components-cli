import React from 'react';
import { Box, Typography, Grid, IconButton } from '@mui/material';
import PhoneIcon from '@mui/icons-material/Phone';
import EmailIcon from '@mui/icons-material/Email';
import LocationOnIcon from '@mui/icons-material/LocationOn';

const ContactInfo = ({ phone, email, address }) => {
  const contacts = [
    { icon: <PhoneIcon />, label: 'Phone', value: phone },
    { icon: <EmailIcon />, label: 'Email', value: email },
    { icon: <LocationOnIcon />, label: 'Address', value: address },
  ];

  return (
    <Box>
      <Grid container spacing={2}>
        {contacts.map((contact, index) => (
          <Grid item xs={12} sm={6} md={4} key={index}>
            <Box>
              <IconButton color="primary" size="large">
                {contact.icon}
              </IconButton>
              <Box>
                <Typography variant="h6">{contact.label}</Typography>
                <Typography variant="body1">
                  {contact.value}
                </Typography>
              </Box>
            </Box>
          </Grid>
        ))}
      </Grid>
    </Box>
  );
};

export default ContactInfo;